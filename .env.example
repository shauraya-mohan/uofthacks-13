# MobilityCursor Environment Variables
# Copy this file to frontend/.env.local and fill in your actual values

# Required: Mapbox access token for map display
# Get one free at https://account.mapbox.com/
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token_here

# MongoDB Atlas connection string
# Get this from MongoDB Atlas: Connect > Drivers > Copy connection string
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/mobilify?retryWrites=true&w=majority

# Admin password for the admin panel
NEXT_PUBLIC_ADMIN_PASSWORD=admin

# Optional: OpenAI API key for real AI-powered image analysis
OPENAI_API_KEY=sk-your_openai_api_key_here

# Optional: TwelveLabs API key for video analysis
TWELVELABS_API_KEY=tlk_your_twelvelabs_api_key_here

# Optional: Cloudinary credentials for media storage
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: Amplitude API key for analytics tracking
NEXT_PUBLIC_AMPLITUDE_API_KEY=your_amplitude_api_key
