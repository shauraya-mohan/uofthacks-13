# Required: Mapbox access token for map display
# Get one free at https://account.mapbox.com/
NEXT_PUBLIC_MAPBOX_TOKEN=pk.your_mapbox_token_here

# Admin password for the admin panel (default: "admin")
NEXT_PUBLIC_ADMIN_PASSWORD=admin

# Optional: Google Gemini API key for AI-powered barrier analysis
# Get one at https://aistudio.google.com/apikey
# If not set, the app uses deterministic mock analysis
GEMINI_API_KEY=your_gemini_api_key_here

# MongoDB Atlas connection string
# Get this from MongoDB Atlas: Connect > Drivers > Copy connection string
# Replace <password> with your database user password
MONGODB_URI=mongodb+srv://username:<password>@cluster0.mongodb.net/?appName=Cluster0

# Cloudinary configuration (for image hosting + CDN delivery)
# Sign up free at https://cloudinary.com/
# Find these in Cloudinary Dashboard > Settings > API Keys
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Optional: Cloudinary folder for uploads (default: "mobilitycursor")
# CLOUDINARY_FOLDER=mobilitycursor

# Gmail SMTP configuration (for email notifications - RECOMMENDED)
# Uses your Gmail account to send notification emails
#
# Setup steps:
# 1. Enable 2-Step Verification: https://myaccount.google.com/security
# 2. Generate App Password: https://myaccount.google.com/apppasswords
#    - Select "Mail" and your device, then click Generate
#    - Copy the 16-character password (no spaces needed)
# 3. Add your Gmail address and the App Password below
#
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx

# Alternative: Resend API (optional, Gmail is preferred)
# Sign up free at https://resend.com/
# RESEND_API_KEY=re_your_resend_api_key_here
# RESEND_FROM_EMAIL=MobilityCursor <notifications@yourdomain.com>

# Optional: App URL for email links (auto-detected in production)
# NEXT_PUBLIC_APP_URL=https://yourdomain.com
